---
import Layout from "../layouts/Layout.astro";
import Chat from "../components/Chat.astro";
import Header from "../components/Header.astro";
---

<Layout title="Astro Template">
	<main data-theme="dark" class="h-screen w-full relative overflow-x-hidden">
		<Header />
		<section class="w-full my-16">
			<div class="flex w-full mx-auto max-w-screen-xl">
				<div class="m-auto pr-32">
					<h1
						class="text-[48px] leading-[56px] font-semibold max-w-[600px]"
					>
						Conversas automatizadas, <span
							class="font-black text-indigo-600"
							>textos mais r√°pidos.</span
						>
					</h1>
					<p class="max-w-[600px] mt-6">
						Lorem ipsum dolor sit amet consectetur adipisicing elit.
						Minima esse repellat quibusdam sunt repellendus,
						consequatur tenetur atque veniam, deserunt id delectus
						eaque culpa
					</p>
				</div>
				<div
					class="flex scale-90 -skew-x-6 flex-grow shrink-0 items-center justify-center relative"
				>
					<div class="absolute -right-40 top-24 z-0">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="240"
							height="240"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="icon icon-tabler icons-tabler-outline icon-tabler-bolt text-zinc-900/50"
						>
							<path stroke="none" d="M0 0h24v24H0z" fill="none"
							></path>
							<path d="M13 3l0 7l6 0l-8 11l0 -7l-6 0l8 -11"
							></path>
						</svg>
					</div>

